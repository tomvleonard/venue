<div class='container'>
  <h2>Calendar of Upcoming Events</h2>
  <table class='table table-striped table-bordered table-collapse'>
    <thead>
      <th>Performer</th>
      <th>Event Date</th>
      <th>Details</th>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.performer %></td>
          <td><%= event.event_date.in_time_zone('Eastern Time (US & Canada)').strftime('%m/%d/%Y %I:%M %p') %></td>
          <td><%= event.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% if user_signed_in? %>
    <%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete } %>
  <% end %>
</div>